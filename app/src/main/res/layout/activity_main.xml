<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/black">

    <!-- OpenGL Surface for delayed & live rendering -->
    <SurfaceView
        android:id="@+id/glSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />

    <!-- Delay progress bar -->
    <ProgressBar
        android:id="@+id/delayProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="top"
        android:max="1000"
        android:progress="0"
        android:indeterminate="false"
        android:progressTint="@android:color/white"
        android:backgroundTint="@android:color/transparent"
        android:visibility="gone" />

    <!-- Settings button -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_settings_gear"
        app:tint="@android:color/white" />

    <!-- Unified translucent overlay container -->
    <FrameLayout
        android:id="@+id/settingsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80222222"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <!-- Tap area to dismiss overlay -->
    <View
        android:id="@+id/overlayDismissArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Settings sheet -->
    <LinearLayout
        android:id="@+id/settingsSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        android:clipToPadding="false">

        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#33FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Include the actual settings controls -->
        <include layout="@layout/include_settings_overlay" />
    </LinearLayout>
</FrameLayout>

    </FrameLayout>
